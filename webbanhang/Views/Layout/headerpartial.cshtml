@using webbanhang.Models
@*@model THANHVIEN*@




<link rel="stylesheet" href="~/Content/css/dangki.css">




<div class="collapse navbar-collapse justify-content-center" id="mynavbar">
    <div class="blog_right_sidebar">
        <div class="container-fluid">
            @using (Html.BeginForm("kqtimkiem", "timkiem"))
            {
                <div class="d-flex">
                    <input class="form-control me-2 my-0" type="text" name="stukhoa" placeholder="Nhập từ khóa bạn muốn tìm kiếm ....." aria-label="Search" />
                    <button class="btn btn-outline submit" type="submit">Search</button>
                </div>

            }
        </div>
    </div>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("tatcasanpham", "sanpham")">Shop</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("blog", "Home")">Blog</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("contact", "Home")">Contact</a>
        </li>
    </ul>


    @if (Session["TAIKHOAN"] != null && Session["TAIKHOAN"] != "")
    {
        THANHVIEN tv = (THANHVIEN)Session["TAIKHOAN"];
        <div style="color:#fff;">@tv.HOTEN</div>

        @Html.ActionLink("Đăng Xuất", "dangxuat", null, new { @class = "dangxuat_button px-3" });


    }
    else
    {

        <button type="submit" class="btn button_nav click_nhap mx-3">ĐĂNG NHẬP | ĐĂNG KÍ</button>
    }

    <div id="login">
        @using (Html.BeginForm("dangnhap", "sanpham"))
        {

            <div class="box_login">
                <div class="close_login">
                    <div class="icon_closelogin"><i class="fa-solid fa-xmark"></i></div>
                </div>
                <h2 class="name_login">Đăng nhập</h2>
                <div class="input">
                    <input type="text" name="txtTenDangNhap" placeholder="Tên Đăng Nhập"><br>
                    <input type="password" name="txtMatKhau" placeholder="Mật Khẩu">
                </div>
                @*            <h3 style="font-weight:bold;color:red;text-align:center" id="thongbao">@ViewBag.thongbao</h3>
                *@            <div class="quen">Quên Mật Khẩu ?</div>
                <div class="row nhap">
                    <div class="col-sm-5">
                        <button class="btn dangnhap">Đăng Nhập</button>
                    </div>
                    <div class="col-sm-4">
                        @Html.ActionLink("Đăng Ký","DANGKI","null",new {@class="btn dangky" })
                       @* <button class="btn dangky">Đăng kí</button>*@
                    </div>
                </div>
            </div>
        }
    </div>
